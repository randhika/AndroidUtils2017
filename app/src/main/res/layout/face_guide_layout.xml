<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/common_color_000000"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/face_guide_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_personal_profile"/>
    <ImageView
        android:id="@+id/face_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/faceframe"/>

    <ImageView
        android:id="@+id/face_guide_scale"
        android:layout_width="68dip"
        android:layout_height="56dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:scaleType="fitCenter"
        android:src="@mipmap/face_guide_scale"/>

    <ImageView
        android:id="@+id/face_guide_tran"
        android:layout_width="59dip"
        android:layout_height="79dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dip"
        android:scaleType="fitCenter"
        android:src="@mipmap/face_guide_tran" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dip"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="@string/face_detection_drag"
        android:textSize="13dip" />

    <!-- ok 按钮 -->
    <TextView
        android:id="@+id/face_guide_btn"
        android:layout_width="120dip"
        android:layout_height="39dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:background="@drawable/face_guide_start"
        android:gravity="center"
        android:text="OK"
        android:textColor="@android:color/white"
        android:textSize="13dip"/>

</RelativeLayout>