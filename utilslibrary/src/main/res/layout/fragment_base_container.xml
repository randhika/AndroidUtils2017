<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/addFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include
        android:id="@+id/no_record_view"
        layout="@layout/layout_no_record_bg"/>

    <include
        android:id="@+id/network_error_view"
        layout="@layout/layout_no_network_bg"/>

    <org.cy.uilibrary.view.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:loadingText="@string/loading_tip"/>

</FrameLayout>
